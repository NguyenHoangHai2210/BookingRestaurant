@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đặt bàn nhà hàng</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .heading {
            font-family: 'Playfair Display', serif;
        }
    </style>
</head>
<body class="bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-md">
        <div class="container mx-auto px-4 py-6 flex justify-between items-center">
            <h1 class="heading text-3xl font-bold text-gray-800">Smart-Booking</h1>
            <nav>
                <ul class="flex space-x-8">
                    <li><a href="#" class="text-gray-700 hover:text-amber-600 transition">Trang chủ</a></li>
                    <li><a href="#" class="text-gray-700 hover:text-amber-600 transition">Thực đơn</a></li>
                    <li><a href="#" class="text-gray-700 hover:text-amber-600 transition">Đặt bàn</a></li>
                    <li><a href="#" class="text-gray-700 hover:text-amber-600 transition">Liên hệ</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="relative h-96 bg-[url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4')] bg-cover bg-center">
        <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center">
            <div class="container mx-auto px-4 text-white">
                <h2 class="heading text-5xl font-bold mb-4">Bạn Đang Cần Tìm Kiếm Nhà Hàng ?</h2>
                <p class="text-xl max-w-2xl">Trải nghiệm ẩm thực đẳng cấp</p>
                <p class="text-xl max-w-2xl">Nhà hàng sang trọng với không gian ấm cúng và thực đơn đa dạng</p>
            </div>
        </div>
    </section>

    <!-- Famous Restaurants -->
    <section class="py-16 bg-gray-100">
        <div class="container mx-auto px-4">
            <h2 class="heading text-4xl font-bold text-center mb-12 text-gray-800">Nhà hàng nổi tiếng</h2>

            <div class="grid md:grid-cols-3 gap-8">
                <!-- Restaurant 1 -->
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
                    <img src="https://images.unsplash.com/photo-1555396273-367ea4eb4db5" alt="Nhà hàng 1" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="heading text-xl font-bold mb-2">GoGi House Nguyễn Văn Linh</h3>
                        <div class="flex items-center mb-2">
                            <div class="flex text-amber-400">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                            </div>
                            <span class="text-gray-600 ml-2">4.5 (120 đánh giá)</span>
                        </div>
                        <p class="text-gray-600 mb-4">Ẩm thực Hàn Quốc đích thực với không gian sang trọng</p>
                        <button onclick="window.open('@Url.Action("detailnhahang", "Home")', '_blank')" class="btn btn-warning"><a href="#" class="text-amber-600 font-medium hover:text-amber-700 transition">Xem chi tiết →</a></button>

                    </div>
                </div>

                <!-- Restaurant 2 -->
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
                    <img src="https://images.unsplash.com/photo-1517248135467-4c7edcad34c4" alt="Nhà hàng 2" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="heading text-xl font-bold mb-2">La Maison 1888</h3>
                        <div class="flex items-center mb-2">
                            <div class="flex text-amber-400">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                            <span class="text-gray-600 ml-2">5.0 (85 đánh giá)</span>
                        </div>
                        <p class="text-gray-600 mb-4">Ẩm thực Pháp cao cấp với đầu bếp Michelin</p>
                        <button onclick="window.open('@Url.Action("detailnhahang", "Home")', '_blank')" class="btn btn-warning"><a href="#" class="text-amber-600 font-medium hover:text-amber-700 transition">Xem chi tiết →</a></button>



                    </div>
                </div>

                <!-- Restaurant 3 -->
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
                    <img src="https://images.unsplash.com/photo-1555396273-367ea4eb4db5" alt="Nhà hàng 3" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="heading text-xl font-bold mb-2">The Pizza Company</h3>
                        <div class="flex items-center mb-2">
                            <div class="flex text-amber-400">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="far fa-star"></i>
                            </div>
                            <span class="text-gray-600 ml-2">4.0 (210 đánh giá)</span>
                        </div>
                        <p class="text-gray-600 mb-4">Pizza Ý chuẩn vị với nguyên liệu nhập khẩu</p>
                        <button onclick="window.open('@Url.Action("detailnhahang", "Home")', '_blank')" class="btn btn-warning"><a href="#" class="text-amber-600 font-medium hover:text-amber-700 transition">Xem chi tiết →</a></button>

                    </div>
                </div>
            </div>

            <div class="text-center mt-10">
                <a href="#" class="inline-block bg-amber-600 text-white px-6 py-3 rounded-lg hover:bg-amber-700 transition font-medium">
                    Xem tất cả nhà hàng
                </a>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-12">
        <div class="container mx-auto px-4">
            <div class="grid md:grid-cols-3 gap-8">
                <div>
                    <h3 class="heading text-2xl font-bold mb-4">GoGi House</h3>
                    <p class="mb-4">09 Nguyễn Văn Linh ,Hải Châu , Đà Nẵng </p>
                    <p>Email: gogihouse.com</p>
                </div>
                <div>
                    <h4 class="text-xl font-medium mb-4">Giờ mở cửa</h4>
                    <p class="mb-2">Thứ 2 - Thứ 6: 11:00 - 22:00</p>
                    <p>Thứ 7 - Chủ nhật: 10:00 - 23:00</p>
                </div>
                <div>
                    <h4 class="text-xl font-medium mb-4">Theo dõi chúng tôi</h4>
                    <div class="flex space-x-4">
                        <a href="#" class="text-2xl hover:text-amber-400 transition"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-2xl hover:text-amber-400 transition"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-2xl hover:text-amber-400 transition"><i class="fab fa-tiktok"></i></a>
                    </div>
                </div>
            </div>
            <div class="border-t border-gray-700 mt-8 pt-8 text-center">
                <p>&copy; Smart Booking. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Restaurant Detail Modal -->
    <div id="restaurantModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
        <div class="bg-white rounded-lg max-w-4xl w-full max-h-[90vh] overflow-y-auto">
            <div class="relative">
                <button id="closeModal" class="absolute top-4 right-4 text-white bg-black bg-opacity-50 rounded-full p-2 hover:bg-opacity-70 transition">
                    <i class="fas fa-times"></i>
                </button>
                <div class="h-64 bg-gray-200">
                    <img id="modalImage" src="" alt="" class="w-full h-full object-cover">
                </div>
            </div>
            <div class="p-8">
                <h2 id="modalTitle" class="heading text-3xl font-bold mb-4"></h2>
                <div class="flex items-center mb-6">
                    <div id="modalRating" class="flex text-amber-400 mr-2"></div>
                    <span id="modalReviewCount" class="text-gray-600"></span>
                </div>

                <div class="grid md:grid-cols-2 gap-8 mb-8">
                    <div>
                        <h3 class="text-xl font-bold mb-4">Giới thiệu</h3>
                        <p id="modalDescription" class="text-gray-700 mb-6"></p>
                        <div class="mb-6">
                            <h4 class="font-bold mb-2">Địa chỉ</h4>
                            <p id="modalAddress" class="text-gray-700"></p>
                        </div>
                        <div>
                            <h4 class="font-bold mb-2">Giờ mở cửa</h4>
                            <p id="modalHours" class="text-gray-700"></p>
                        </div>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold mb-4">Thực đơn nổi bật</h3>
                        <ul id="modalMenu" class="space-y-3"></ul>
                    </div>
                </div>

                <div class="mt-8">
                    <h3 class="text-xl font-bold mb-4">Đặt bàn</h3>
                    <form id="bookingForm" class="space-y-4">
                        <div>
                            <label class="block text-gray-700 mb-1">Họ và tên</label>
                            <input type="text" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" required>
                        </div>
                        <div>
                            <label class="block text-gray-700 mb-1">Số điện thoại</label>
                            <input type="tel" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" required>
                        </div>
                        <div class="grid md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-gray-700 mb-1">Ngày</label>
                                <input type="date" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" required>
                            </div>
                            <div>
                                <label class="block text-gray-700 mb-1">Giờ</label>
                                <select class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" required>
                                    <option value="">Chọn giờ</option>
                                    <option>11:00</option>
                                    <option>11:30</option>
                                    <option>12:00</option>
                                    <option>12:30</option>
                                    <option>13:00</option>
                                    <option>17:00</option>
                                    <option>17:30</option>
                                    <option>18:00</option>
                                    <option>18:30</option>
                                    <option>19:00</option>
                                    <option>19:30</option>
                                    <option>20:00</option>
                                </select>
                            </div>
                        </div>
                        <div>
                            <label class="block text-gray-700 mb-1">Số người</label>
                            <select class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" required>
                                <option value="">Chọn số người</option>
                                <option>1 người</option>
                                <option>2 người</option>
                                <option>3-4 người</option>
                                <option>5-6 người</option>
                                <option>Nhóm lớn</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-gray-700 mb-1">Yêu cầu đặc biệt</label>
                            <textarea class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" rows="2"></textarea>
                        </div>
                        <button type="submit" class="w-full bg-amber-600 text-white py-3 px-6 rounded-lg hover:bg-amber-700 transition font-medium">
                            Xác nhận đặt bàn
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>


</body>
</html>