@{
    ViewBag.Title = "DatBan";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết nhà hàng</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .heading {
            font-family: 'Playfair Display', serif;
        }
    </style>
</head>
<body class="bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-md">
        <div class="container mx-auto px-4 py-6 flex justify-between items-center">
            <a href="index.html" class="heading text-3xl font-bold text-gray-800">Smart-Booking</a>
            <nav>
                <ul class="flex space-x-8">
                    <li><a href="index.html" class="text-gray-700 hover:text-amber-600 transition">Trang chủ</a></li>
                    <li><a href="#" class="text-gray-700 hover:text-amber-600 transition">Thực đơn</a></li>
                    <li><a href="#" class="text-gray-700 hover:text-amber-600 transition">Đặt bàn</a></li>
                    <li><a href="#" class="text-gray-700 hover:text-amber-600 transition">Liên hệ</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Restaurant Detail -->
    <main class="container mx-auto px-4 py-12">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <!-- Restaurant Image -->
            <div class="h-96 bg-gray-200">
                <img id="restaurantImage" src="" alt="" class="w-full h-full object-cover">
            </div>

            <!-- Restaurant Info -->
            <div class="p-8">
                <div class="flex justify-between items-start mb-6">
                    <div>
                        <h1 id="restaurantTitle" class="heading text-3xl font-bold mb-2"></h1>
                        <div class="flex items-center">
                            <div id="restaurantRating" class="flex text-amber-400 mr-2"></div>
                            <span id="restaurantReviewCount" class="text-gray-600"></span>
                        </div>
                    </div>
                    <a href="index.html" class="text-amber-600 hover:text-amber-700 flex items-center">
                        <button onclick="window.location.href='/Views/Home/DatBan.cshtml'" class="btn btn-success">
                            Quay Lai
                        </button>


                    </a>
                </div>

                <div class="grid md:grid-cols-2 gap-12">
                    <!-- Left Column - Restaurant Details -->
                    <div>
                        <h2 class="text-2xl font-bold mb-4">Giới thiệu</h2>
                        <p id="restaurantDescription" class="text-gray-700 mb-6"></p>

                        <div class="mb-6">
                            <h3 class="text-xl font-bold mb-2">Địa chỉ</h3>
                            <p id="restaurantAddress" class="text-gray-700"></p>
                        </div>

                        <div class="mb-6">
                            <h3 class="text-xl font-bold mb-2">Giờ mở cửa</h3>
                            <p id="restaurantHours" class="text-gray-700"></p>
                        </div>

                        <div>
                            <h3 class="text-xl font-bold mb-2">Thực đơn nổi bật</h3>
                            <ul id="restaurantMenu" class="space-y-3"></ul>
                        </div>
                    </div>

                    <!-- Right Column - Booking Form -->
                    <div>
                        <h2 class="text-2xl font-bold mb-4">Đặt bàn</h2>
                        <form id="bookingForm" class="space-y-4">
                            <div>
                                <label class="block text-gray-700 mb-1">Họ và tên</label>
                                <input type="text" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" required>
                            </div>
                            <div>
                                <label class="block text-gray-700 mb-1">Số điện thoại</label>
                                <input type="tel" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" required>
                            </div>
                            <div class="grid md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-gray-700 mb-1">Ngày</label>
                                    <input type="date" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" required>
                                </div>
                                <div>
                                    <label class="block text-gray-700 mb-1">Giờ</label>
                                    <select class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" required>
                                        <option value="">Chọn giờ</option>
                                        <option>11:00</option>
                                        <option>11:30</option>
                                        <option>12:00</option>
                                        <option>12:30</option>
                                        <option>13:00</option>
                                        <option>17:00</option>
                                        <option>17:30</option>
                                        <option>18:00</option>
                                        <option>18:30</option>
                                        <option>19:00</option>
                                        <option>19:30</option>
                                        <option>20:00</option>
                                    </select>
                                </div>
                            </div>
                            <div>
                                <label class="block text-gray-700 mb-1">Số người</label>
                                <select class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" required>
                                    <option value="">Chọn số người</option>
                                    <option>1 người</option>
                                    <option>2 người</option>
                                    <option>3-4 người</option>
                                    <option>5-6 người</option>
                                    <option>Nhóm lớn</option>
                                </select>
                            </div>
                            <div>
                                <label class="block text-gray-700 mb-1">Yêu cầu đặc biệt</label>
                                <textarea class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" rows="2"></textarea>
                            </div>
                            <button type="submit" class="w-full bg-amber-600 text-white py-3 px-6 rounded-lg hover:bg-amber-700 transition font-medium">
                                Xác nhận đặt bàn
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-12">
        <div class="container mx-auto px-4">
            <div class="grid md:grid-cols-3 gap-8">
                <div>
                    <h3 class="heading text-2xl font-bold mb-4">Smart Booking</h3>
                    <p class="mb-4">Đặt bàn nhà hàng dễ dàng và nhanh chóng</p>
                    <p>Email: booking@smartbooking.com</p>
                </div>
                <div>
                    <h4 class="text-xl font-medium mb-4">Hỗ trợ</h4>
                    <p class="mb-2">Hotline: 1900 1234</p>
                    <p>Giờ làm việc: 8:00 - 22:00</p>
                </div>
                <div>
                    <h4 class="text-xl font-medium mb-4">Theo dõi chúng tôi</h4>
                    <div class="flex space-x-4">
                        <a href="#" class="text-2xl hover:text-amber-400 transition"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-2xl hover:text-amber-400 transition"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-2xl hover:text-amber-400 transition"><i class="fab fa-tiktok"></i></a>
                    </div>
                </div>
            </div>
            <div class="border-t border-gray-700 mt-8 pt-8 text-center">
                <p>&copy; 2023 Smart Booking. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        // Restaurant data
        const restaurants = {
            'gogi-house': {
                title: 'GoGi House Nguyễn Văn Linh',
                image: 'https://images.unsplash.com/photo-1555396273-367ea4eb4db5',
                rating: 4.5,
                reviews: 120,
                description: 'Nhà hàng ẩm thực Hàn Quốc đích thực với không gian sang trọng và phục vụ chuyên nghiệp. Chúng tôi chuyên các món nướng Hàn Quốc chất lượng cao với nguyên liệu nhập khẩu trực tiếp từ Hàn Quốc.',
                address: '09 Nguyễn Văn Linh, Hải Châu, Đà Nẵng',
                hours: 'Thứ 2 - Chủ nhật: 10:00 - 22:00',
                menu: [
                    'Gà nướng sốt GoGi - 250.000đ',
                    'Sườn bò Mỹ nướng - 350.000đ',
                    'Lẩu kim chi hải sản - 450.000đ',
                    'Bibimbap - 120.000đ',
                    'Bánh gạo cay - 90.000đ'
                ]
            },
            'la-maison': {
                title: 'La Maison 1888',
                image: 'https://images.unsplash.com/photo-1517248135467-4c7edcad34c4',
                rating: 5,
                reviews: 85,
                description: 'Nhà hàng ẩm thực Pháp cao cấp với đầu bếp Michelin. Không gian sang trọng phù hợp cho các dịp đặc biệt và hẹn hò lãng mạn.',
                address: 'Trường Sa, Hoà Hải, Ngũ Hành Sơn, Đà Nẵng',
                hours: 'Thứ 3 - Chủ nhật: 11:00 - 22:00 (Đóng cửa thứ 2)',
                menu: [
                    'Foie gras - 450.000đ',
                    'Bò bít tết - 650.000đ',
                    'Súp hành tây kiểu Pháp - 180.000đ',
                    'Bánh macaron - 120.000đ',
                    'Rượu vang đỏ - 350.000đ/ly'
                ]
            },
            'pizza-company': {
                title: 'The Pizza Company',
                image: 'https://images.unsplash.com/photo-1555396273-367ea4eb4db5',
                rating: 4,
                reviews: 210,
                description: 'Pizza Ý chuẩn vị với nguyên liệu nhập khẩu từ Ý. Lò nướng bằng củi truyền thống mang đến hương vị đặc trưng.',
                address: 'Lê Duẩn, Thạch Thang, Hải Châu, Đà Nẵng',
                hours: 'Thứ 2 - Chủ nhật: 10:00 - 22:00',
                menu: [
                    'Pizza hải sản - 250.000đ',
                    'Pizza bò bít tết - 280.000đ',
                    'Mỳ Ý sốt bò bằm - 150.000đ',
                    'Salad Caesar - 120.000đ',
                    'Nước ép trái cây - 60.000đ'
                ]
            }
        };

        // Get restaurant ID from URL
        const urlParams = new URLSearchParams(window.location.search);
        const restaurantId = urlParams.get('id');

        // Load restaurant data
        if (restaurantId && restaurants[restaurantId]) {
            const restaurant = restaurants[restaurantId];

            // Set restaurant info
            document.getElementById('restaurantTitle').textContent = restaurant.title;
            document.getElementById('restaurantImage').src = restaurant.image;

            // Set rating stars
            const ratingContainer = document.getElementById('restaurantRating');
            const fullStars = Math.floor(restaurant.rating);
            const hasHalfStar = restaurant.rating % 1 >= 0.5;

            for (let i = 0; i < fullStars; i++) {
                ratingContainer.innerHTML += '<i class="fas fa-star"></i>';
            }
            if (hasHalfStar) {
                ratingContainer.innerHTML += '<i class="fas fa-star-half-alt"></i>';
            }
            for (let i = 0; i < 5 - fullStars - (hasHalfStar ? 1 : 0); i++) {
                ratingContainer.innerHTML += '<i class="far fa-star"></i>';
            }

            document.getElementById('restaurantReviewCount').textContent = `(${restaurant.reviews} đánh giá)`;
            document.getElementById('restaurantDescription').textContent = restaurant.description;
            document.getElementById('restaurantAddress').textContent = restaurant.address;
            document.getElementById('restaurantHours').textContent = restaurant.hours;

            // Set menu items
            const menuContainer = document.getElementById('restaurantMenu');
            restaurant.menu.forEach(item => {
                const li = document.createElement('li');
                li.className = 'flex justify-between';
                li.innerHTML = `<span>${item.split(' - ')[0]}</span><span class="font-bold">${item.split(' - ')[1]}</span>`;
                menuContainer.appendChild(li);
            });
        }

        // Form submission
        document.getElementById('bookingForm').addEventListener('submit', function (e) {
            e.preventDefault();
            const restaurantName = document.getElementById('restaurantTitle').textContent;
            alert(`Cảm ơn bạn đã đặt bàn tại ${restaurantName}! Chúng tôi sẽ liên hệ lại để xác nhận.`);
            this.reset();
        });
    </script>
</body>
</html>
